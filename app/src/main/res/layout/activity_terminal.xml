<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_terminal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="inf.obdblue.activities.TerminalActivity"
    android:background="@color/bgColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/consoleTextview"
        android:width="350dp"
        android:background="@color/consoleBgColor"
        android:textColor="@color/statusTextColor"
        android:typeface="monospace"
        android:lines="20" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/consoleTextview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/consoleInputEditText"
        android:background="@color/inputColor"
        android:textColorLink="@color/linkColor"
        android:textSize="20sp"
        android:hint="@string/terminal_command_hint" />

    <Button
        android:text="@string/terminal_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendCommandButton"
        android:layout_below="@+id/consoleInputEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />
</RelativeLayout>
