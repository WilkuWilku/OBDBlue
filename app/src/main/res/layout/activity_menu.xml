<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="inf.obdblue.MenuActivity"
    android:background="@color/bgColor"
    android:gravity="center"
    android:layout_alignParentBottom="false"
    android:layout_alignParentEnd="false"
    android:layout_alignParentRight="false"
    android:layout_alignParentStart="false"
    android:layout_alignParentLeft="false"
    android:layout_alignParentTop="false">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="false"
        android:layout_alignParentBottom="false"
        android:stretchColumns="*"
        android:layout_marginBottom="50dp">
        <TableRow
            android:minHeight="100dp">
            <Button
                android:text="Terminal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/terminalButton"
                android:height="50dp"
                android:width="50dp"
                android:typeface="serif" />

            <Button
                android:text="DTC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dtcButton"
                android:height="50dp"
                android:width="50dp"
                android:typeface="serif" />

        </TableRow>
        <TableRow android:minHeight="100dp">
            <Button
                android:text="Dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dashboardButton"
                android:height="50dp"
                android:width="50dp"
                android:typeface="serif" />

            <Button
                android:text="0-100 Timer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/timerButton"
                android:height="50dp"
                android:width="50dp"
                android:typeface="serif" />
        </TableRow>
        <TableRow
            android:minHeight="100dp">
            <Button
                android:text="Bluetooth Connenction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bluetoothButton"
                android:height="50dp"
                android:width="50dp"
                android:typeface="serif" />

            <Button
                android:text="Settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/settingsButton"
                android:height="50dp"
                android:width="50dp"
                android:typeface="serif" />
        </TableRow>
    </TableLayout>

    <TextView
        android:text="Choose Mode:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:id="@+id/chooseModeTextView"
        android:textColor="@color/labelColor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="inf.obdblue.StatusFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_status"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
